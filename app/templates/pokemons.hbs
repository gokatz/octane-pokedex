<div class="text-center">
  {{#each this.model as |pokemon|}}
    <LinkTo @route="pokemons.detail" @model={{pokemon.name}}>
      <div class="text-center inline-block hover:shadow-md p-4 border border-gray-300 m-2">
        <img src={{pokemon.imageUrl}} alt={{pokemon.name}}>
        <h4 class="capitalize">{{pokemon.name}}</h4>
      </div>
    </LinkTo>
  {{/each}}
</div>

{{outlet}}